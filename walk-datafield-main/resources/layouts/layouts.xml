<layouts>
  <layout id="Walk">
    <drawable id="background" class="Background"></drawable>
    <label id="time" x="center" y="center" color="Graphics.COLOR_RED" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_NUMBER_THAI_HOT"></label>
    <drawable id="steps" class="PowerBar">
      <param name="startAngle">90</param>
      <param name="colourHigh">Graphics.COLOR_PURPLE</param>
      <param name="colourMedium">Graphics.COLOR_PURPLE</param>
      <param name="colourLow">Graphics.COLOR_PURPLE</param>
    </drawable>
    <drawable id="battery" class="PowerBar">
      <param name="startAngle">270</param>
      <param name="colourHigh">Graphics.COLOR_GREEN</param>
      <param name="colourMedium">Graphics.COLOR_YELLOW</param>
      <param name="colourLow">Graphics.COLOR_RED</param>
    </drawable>
    <label id="timer" x="center" y="30" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SMALL"></label>
    <label id="distance" x="center" y="55" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SMALL"></label>
    <label id="pace" x="50" y="155" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_XTINY"></label>
    <label id="grade" x="128" y="155" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_XTINY"></label>
  </layout>
</layouts>
